NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)

all: nwnx_areas.so

nwnx_areas.so: HookFunc.o NWNXAreas.o plugin-areas.o
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_areas.so
	mkdir -p @prefix@/ ; install nwnx_areas.so @prefix@/
