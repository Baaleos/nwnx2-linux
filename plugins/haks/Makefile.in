NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)


CC	 = gcc
CXX      = gcc
GPERF    = gperf
RM	 = /bin/rm
MV	 = /bin/mv
CP	 = /bin/cp
SED      = /bin/sed
INSTALL	 = /usr/bin/install -c

INCS	 = -I. -I.. -I../.. -I ../../include -I/usr/local/include
LIBS	 = -L/usr/local/lib -lm -lz
DEFS	 = -D_REENTRANT -D_THREAD_SAFE
CFLAGS   = @CFLAGS@ -Wall -Werror $(DEFS) $(INCS)
CPPFLAGS = @CPPFLAGS@ -Wall -Werror $(DEFS) $(INCS)
LFLAGS   = @LDFLAGS@ -w -fPIC -shared -rdynamic

OFILES  = \
    funcs/f_DumpHiddenHaks.o                      \
    funcs/f_SetHakHidden.o                         \
    hooks/h_PackModuleIntoMessage.o                  \
    NWNXHaks.o                                    \
    plugin-haks.o


all: nwnx_haks.so

nwnx_haks.so: $(OFILES)
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_haks.so
	mkdir -p @prefix@/ ; install nwnx_haks.so @prefix@/
