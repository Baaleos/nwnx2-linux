NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)

LIBS     = -L/usr/lib/mysql -lmysqlclient -lz

all: nwnx_mysql.so

nwnx_mysql.so: NWNXmysql.o plugin-mysql.o data.o dbmysql.o
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_odbc.so
	mkdir -p @prefix@/ ; install nwnx_mysql.so @prefix@/
