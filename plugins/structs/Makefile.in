NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)

all: nwnx_structs.so

nwnx_structs.so: HookFunc.o NWNXStruct.o plugin-structs.o
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_structs.so
	mkdir -p @prefix@/ ; install nwnx_structs.so @prefix@/
