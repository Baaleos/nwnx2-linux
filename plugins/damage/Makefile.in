
CC	 = gcc
CXX      = gcc
GPERF    = gperf
RM	 = /bin/rm
MV	 = /bin/mv
CP	 = /bin/cp
SED      = /bin/sed
INSTALL	 = /usr/bin/install -c

INCS	 = -I. -I.. -I../.. -I ../../include -I/usr/local/include
LIBS	 = -L/usr/local/lib -lm -lz
DEFS	 = -D_REENTRANT -D_THREAD_SAFE
CFLAGS   = @CFLAGS@ -Wall -Werror $(DEFS) $(INCS)
CPPFLAGS = @CPPFLAGS@ -Wall -Werror $(DEFS) $(INCS)
LFLAGS   = @LDFLAGS@ -w -fPIC -shared -rdynamic

OFILES  = \
    funcs/f_DoDamageCalc.o                 \
    hooks/h_DamageCalcs.o                  \
    NWNXDamage.o                               \
    plugin-damage.o

all: nwnx_damage.so




NWNXDamage.o: NWNXDamage.h

nwnx_damage.so: $(OFILES)
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

depend:
	$(CC) -MM $(CFLAGS) *.c > .depend

clean:
	$(RM) -f *.o */*.o *.so

distclean: clean
