NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)

LIBS     = $(LIBS) -L/usr/lib/mysql -lmysqlclient -lz

all: nwnx_odbc.so

nwnx_odbc.so: HookSCORCO.o NWNXodbc.o mysql.o plugin-odbc.o
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_odmbc.so
	mkdir -p @prefix@/ ; install nwnx_odmbc.so @prefix@/
