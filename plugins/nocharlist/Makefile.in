NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)

all: nwnx_nocharlist.so

nwnx_nocharlist.so: nocharlistHooks.o NWNXnocharlist.o plugin-nocharlist.o
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_nocharlist.so
	mkdir -p @prefix@/ ; install nwnx_nocharlist.so @prefix@/
