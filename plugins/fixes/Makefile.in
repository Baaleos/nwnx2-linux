NWNXDIR  = ../..
CPPFLAGS = $(PLUGIN_CPPFLAGS) -I$(NWNXDIR)
LFLAGS   = $(PLUGIN_LFLAGS)

all: nwnx_fixes.so

nwnx_fixes.so: FixesHooks.o NWNXFixes.o plugin-fixes.o
	$(CXX) $(LFLAGS) -o $@ $^ $(LIBS)

clean:
	/bin/rm -f *.o *.so *~

distclean: clean
	/bin/rm -f Makefile

install: nwnx_fixes.so
	mkdir -p @prefix@/ ; install nwnx_fixes.so @prefix@/
